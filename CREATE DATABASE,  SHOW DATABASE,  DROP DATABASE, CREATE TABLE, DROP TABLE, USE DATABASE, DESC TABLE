#creating and dropping your own table

create table pastries(
                    name varchar(50),
                    quantity int);
                    
show tables;

show columns from pastries;

desc pastries;

drop table pastries;

show tables;

--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

--Activity
-- To create new database
CREATE DATABASE shop; 


-- To see what databases are ther in server
SHOW DATABASES;

--To select the database you wanna work in
USE shop;

-- To check what database we are currently in
select database();

--To create table
CREATE TABLE cloth_shop(
            brand_name varchar(50),
            quatity int);

--To see the available tables in that particular database
show tables;

--To see the column name and there details like datatypes
show columns from cloth_shop;

desc cloth_shop;

--To drop completely the table
drop table cloth_shop;

show tables;

select database();

--To drop database
drop database shop;

show databases;

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
